[
  {web_rtp, []},

  {nksip,[
    %% Responsible for waiting time for a response to INVITE.
    {sync_call_time, 20000}
  ]},
  {lager, [
    {handlers, [
      {lager_console_backend, debug},
      {lager_file_backend, [{file, "log/error_web_rtp.log"}, {level, error}]},
      {lager_file_backend, [{file, "log/console_web_rtp.log"}, {level, info}]}
    ]},
    {error_logger_redirect, false},
    {crash_log, "log/crash.log"},
    {colored, true},
    {colors, [
      {debug,     "\e[0;38m" },
      {info,      "\e[0;32m" },
      {notice,    "\e[1;36m" },
      {warning,   "\e[1;33m" },
      {error,     "\e[1;31m" }
    ]}
  ]}
].